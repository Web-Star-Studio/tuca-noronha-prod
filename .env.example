# Example environment variables for tuca-noronha-prod
# Copy this file to `.env.local` and fill in real values. Do NOT commit secrets.

# === App URLs ===
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_URL=http://localhost:3000
SITE_URL=http://localhost:3000

# === Convex ===
NEXT_PUBLIC_CONVEX_URL=
# Used by `npx convex dev` (optional for local dev)
CONVEX_DEPLOYMENT=dev:your-convex-deployment
# Public Convex site URL (used for webhook notification URLs)
CONVEX_SITE_URL=https://your-project-123.convex.site

# === Clerk ===
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_XXXXXXXXXXXXXXXXXXXXXXXX
CLERK_SECRET_KEY=sk_XXXXXXXXXXXXXXXXXXXXXXXX
CLERK_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX
# Optional if using a custom Clerk Domain
CLERK_DOMAIN=

# === Stripe ===
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_CUSTOMER_PORTAL_LINK=

# === Mercado Pago ===
MERCADO_PAGO_PUBLIC_KEY=TEST-XXXXXXXXXXXXXXXXXXXXXXXX
MERCADO_PAGO_ACCESS_TOKEN=TEST-XXXXXXXXXXXXXXXXXXXXXXXX
MERCADO_PAGO_WEBHOOK_SECRET=XXXXXXXXXXXXXXXXXXXXXXXX

# === Sentry ===
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# === Email Settings ===
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Your App Name
NO_REPLY_EMAIL=noreply@example.com
SUPPORT_EMAIL=support@example.com
ADMIN_EMAIL=admin@example.com
MASTER_EMAIL=master@example.com

# === SMTP (for real email sending) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=you@example.com
SMTP_PASS=your-smtp-password

# === Maps & External APIs ===
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
# Optional: Weather data
NEXT_PUBLIC_OPENWEATHER_API_KEY=

# === AI (optional) ===
OPENAI_API_KEY=

# === App-specific Secrets ===
# Used for signing/validating voucher tokens
VOUCHER_SECRET=change-me-to-a-strong-random-string
