        {/* Tab 1: Informa√ß√µes B√°sicas */}
        <TabsContent value="basic" className="space-y-6 p-4 bg-white/60 rounded-lg shadow-sm">
        {/* Informa√ß√µes B√°sicas */}
        <Card className="rounded-2xl border border-slate-200/70 shadow-sm">
